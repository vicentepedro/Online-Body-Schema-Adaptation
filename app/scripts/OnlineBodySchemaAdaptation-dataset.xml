<application>
<name>Online Body Schema Adaptation - Dataset Simulation</name>

<module>
    <name>handPoseEstimation</name>
    <node>localhost</node>
    <parameters> --arm right --minIteration 0</parameters>
</module>
<module>
    <name>yarpview</name>
    <node>localhost</node>
    <parameters>--name /hpe/viewImageCanonical --x 1000 --y 300 </parameters>
    <tag>input</tag>
</module>
<module>
    <name>yarpview</name>
    <node>localhost</node>
    <parameters>--name /hpe/viewImageCorrected --x 1440 --y 300</parameters>
    <tag>input</tag>
</module>
<connection>
    <from>/iCubUnitySim/cam/right</from>
    <to>/hpe/rightCam:i</to>
    <protocol>tcp</protocol>
</connection>
<connection>
    <from>/iCubUnitySim/cam/left</from>
    <to>/hpe/leftCam:i</to>
    <protocol>tcp</protocol>
</connection>
<connection>
    <from>/iCubUnitySim/rightArm</from>
    <to>/hpe/rightArm:i</to>
    <protocol>tcp</protocol>
</connection>
<connection>
    <from>/iCubUnitySim/head</from>
    <to>/hpe/head:i</to>
    <protocol>tcp</protocol>
</connection>
<connection>
    <from>/hpe/particles:o</from>
    <to>/internalmodel/rightArm:i</to>
</connection>
<connection>
    <from>/hpe/head:o</from>
    <to>/internalmodel/head:i</to>
</connection>
<connection>
    <from>/internalmodel/likelihood:o</from>
    <to>/hpe/likelihood:i</to>
</connection>
<connection>
    <from>/internalmodel/fingertips:o</from>
    <to>/hpe/fingerPosition:i</to>
</connection>
<connection>
    <from>/hpe/LRimage:o</from>
    <to>/internalmodel/cam:i</to>
</connection>
<connection>
    <from>/hpe/imageCorrected:o</from>
    <to>/hpe/viewImageCorrected</to>
</connection>
<connection>
    <from>/hpe/imageCanonical:o</from>
    <to>/hpe/viewImageCanonical</to>
</connection>
</application>
